                if (rows.length == 0) {
                    $.messager.alert("提示", "请选择一条记录", "error");
                    return;
                }

                for (var i = 0; i < rows.length; i++) {
                    var id = rows[i].ID;
                    var fullname = rows[i].FullName;
                    addUser(id, fullname);
                }
                $('#grid').datagrid('uncheckAll');
            }

