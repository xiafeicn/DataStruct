        function initRoleData(id) {
            if (id != "") {
                //角色包含的数据权限（组织机构）
                var treeMenu = "treeDataView";
                unCheckTree(treeMenu);
                //勾选指定内容
                $.getJSON("/RoleData/GetRoleDataList?r=" + Math.random() + "&roleId=" + id, function (json) {
                    $.each(json, function (i, item) {
                        var node = $('#' + treeMenu).tree('find', item);//查找节点  
                        if (node) {
                            $('#' + treeMenu).tree('check', node.target);//将得到的节点选中  
                        }
                    });
                });
            }
        }

        function expandAll(treeName) {
            var node = $('#' + treeName).tree('getSelected');
            if (node) {
                $('#' + treeName).tree('expandAll', node.target);
            }
            else {
                $('#' + treeName).tree('expandAll');
            }
        }
        function collapseAll(treeName) {
            var node = $('#' + treeName).tree('getSelected');
            if (node) {
                $('#' + treeName).tree('collapseAll', node.target);
            }
            else {
                $('#' + treeName).tree('collapseAll');
            }
        }
        function unCheckTree(tree) {
            var nodes = $('#' + tree).tree('getChecked');
            if (nodes) {
                for (var i = 0; i < nodes.length; i++) {
                    $('#' + tree).tree('uncheck', nodes[i].target);
                }
            }
        }
        function checkAllTree(tree, checked) {
            var children = $('#' + tree).tree('getChildren');
            for (var i = 0; i < children.length; i++) {
                if (checked) {
                    $('#' + tree).tree('check', children[i].target);
                } else {
                    $('#' + tree).tree('uncheck', children[i].target);
                }
            }
        }


        //供弹出窗口关闭后刷新关系
        function reloadRelation() {
            var id = $("#txtID").val();
            loadData(id);
        }

        //加载制定的对象数据
        function loadData(id) {
            $("#loading").show();
            //$.ajaxSettings.async = false;
            $.getJSON("/Role/FindById?r=" + Math.random() + "&id=" + id, function (info) {
                $("#txtID").val(info.ID);
                $("#txtName").val(info.Name);
                $("#txtNote").val(info.Note);
                $("#txtHandNo").val(info.HandNo);
                $("#txtSortCode").val(info.SortCode);

                $("#txtCategory").val(info.Category);
                $('#txtCompany_ID').combotree('setValue', info.Company_ID);
            });
            
            initRoleFunction(id);
            initRoleData(id);

            //刷新角色的组织机构和用户列表
            initRoleOus(id);
            initRoleUsers(id);

            $("#loading").fadeOut(500);
        }

        //刷新角色的组织机构列表
        function initRoleOus(id) {
            $('#lbxOUs').empty();
            $.getJSON("/OU/GetOusByRole?r=" + Math.random() + "&roleid=" + id, function (json) {
                $.each(json, function (i, item) {
                    $('#lbxOUs').append('<option value="' + item.ID + '">' + item.Name + '</option>');
                });
            });
        }

        //初始化角色的用户
        function initRoleUsers(id) {
            $('#lbxUsers').empty();
            $.getJSON("/User/GetUsersByRole?r=" + Math.random() + "&roleid=" + id, function (json) {
                $.each(json, function (i, item) {
                    $('#lbxUsers').append('<option value="' + item.ID + '">' + item.FullName + '</option>');
                });
            });
        }

        //保存对象数据
        function saveData() {
            if ($("#txtName").val() == "") {
                $("#txtName").focus();
                $.messager.alert("提示", "角色名称不能为空"); return;
            }

            var url = '/Role/Insert?r=' + Math.random();
            var id = $("#txtID").val();
            if (id != "") {
                url = '/Role/Update?id=' + id;
            }

            var postData = $("#ffAdd").serializeArray();
            $.ajax({
                type: 'POST',
                url: url,
                async: false,
                data: postData,
                //data: { ID: $("#txtID").val(), Name: $("#txtName").val(), HandNo: $("#txtHandNo").val(), SortCode: $("#txtSortCode").val(),
                //    Category: $("#txtCategory").val(), Company_ID: $('#txtCompany_ID').val(), Note: $("#txtNote").val()
                //},
                success: function (msg) {
                    if (msg == "true") {
                        $.messager.alert("提示", "操作成功！ ");
                        initRoleTree();
                    }
                    else {
                        $.messager.alert("提示", "操作失败");
                    }
                },
                error: function (xhr, status, error) {
                    $.messager.alert("提示", "操作失败"); //xhr.responseText
                }
            });
        }

        //新增清空控件
        function addData() {
            $("input[type=text][id*='txt']").val("");
            $("textarea[id*='txt']").empty();
            $("select[id*='lbx']").empty();
        }

        //删除当前记录
        function delData() {
            if ($("#txtID").val() == "") {
                $.messager.alert("提示", "请选择记录");
                return;
            }

            $.messager.confirm("删除确认信息", "您要确定删除该条记录吗？", function (deleteAction) {
                if (deleteAction) {
                    $.ajax({
                        type: 'POST',
                        url: '/Role/Delete?r=' + Math.random() + '&op=delete',
                        async: false,
                        data: { ID: $("#txtID").val() },
                        success: function (msg) {
                            if (msg == "true") {
                                $.messager.alert("提示", "操作成功！ ");
                            }
                            else {
                                $.messager.alert("提示", "操作失败");
                            }
                        },
                        error: function (xhr, status, error) {
                            $.messager.alert("提示", "操作失败");
                        }
                    });
                    initRoleTree();
                }
            });
        }

        function deleteUser() {
